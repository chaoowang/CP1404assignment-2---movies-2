BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:"Sort by"
        Spinner:

        Label:
            text:"Add new movie"
        Label:
            text:"Title"
        TextInput:
            multiline: False
            id:title
        Label:
            text:"Category"
        TextInput:
            multiline: False
            id:category
        Label:
            text:"Year"
        TextInput:
            multiline: False
            id:year
        Button:
            text:"Add New Movie..."
            on_press:app.add_movie(title.text, year.text, category.text)
        Button:
            text:"clear"
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:watch_status
            size_hint_y:0.15
        BoxLayout:
            orientation: 'vertical'
            id:movie_list
            size_hint_y:0.7
        Label:
            id:app_status
            size_hint_y:0.15